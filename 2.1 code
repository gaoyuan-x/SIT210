int led = D7;
void setup() {
    pinMode(led,OUTPUT);
}

void loop() {
    //X
    digitalWrite(led,HIGH);
    delay(3000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(3000);
    digitalWrite(led,LOW);
    
    delay(3000);//delay between letters in word
    
    //I
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    
    delay(3000);//delay between letters in word
    
    //N
    digitalWrite(led,HIGH);
    delay(3000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    
    delay(3000);//delay between letters in word
    
    //G
    digitalWrite(led,HIGH);
    delay(3000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(3000);
    digitalWrite(led,LOW);
    delay(1000);
    
    digitalWrite(led,HIGH);
    delay(1000);
    digitalWrite(led,LOW);
    
    delay(7000);//delay between words
}
